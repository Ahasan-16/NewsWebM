generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int        @id @default(autoincrement())
  firstName String     @db.VarChar(50)
  lastName  String     @db.VarChar(50)
  email     String     @unique @db.VarChar(50)
  mobile    String     @db.VarChar(50)
  password  String     @db.VarChar(50)
  otp       String     @db.VarChar(10)
  createdAt DateTime   @default(now()) @db.Timestamp(0)
  updatedAt DateTime   @default(now()) @updatedAt @db.Timestamp(0)
  comments  comments[]
}

model comments {
  id           Int       @id @default(autoincrement())
  descriptions String    @db.VarChar(1000)
  userId       Int
  newsId       Int
  news_list    news_list @relation(fields: [newsId], references: [id])
  users        users     @relation(fields: [userId], references: [id])

  @@index([newsId], map: "comments_newsId_fkey")
  @@index([userId], map: "comments_userId_fkey")
}

model categories {
  id        Int         @id @default(autoincrement())
  name      String      @db.VarChar(50)
  createdAt DateTime    @default(now()) @db.Timestamp(0)
  updatedAt DateTime    @default(now()) @updatedAt @db.Timestamp(0)
  news_list news_list[]
}

model policies {
  id       Int    @id @default(autoincrement())
  long_des String @db.LongText
  type     String @db.VarChar(50)
}

model subscribers {
  id        Int      @id @default(autoincrement())
  email     String   @unique @db.VarChar(100)
  createdAt DateTime @default(now()) @db.Timestamp(0)
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp(0)
}

model socials {
  id        Int      @id @default(autoincrement())
  facebook  String   @db.VarChar(200)
  youtube   String   @db.VarChar(200)
  twitter   String   @db.VarChar(200)
  linkedin  String   @db.VarChar(200)
  about     String   @db.Text
  address   String   @db.Text
  createdAt DateTime @default(now()) @db.Timestamp(0)
  updatedAt DateTime @default(now()) @updatedAt @db.Timestamp(0)
}

model news_list {
  id         Int        @id @default(autoincrement())
  title      String     @db.VarChar(100)
  short_des  String     @db.VarChar(400)
  img1       String     @db.VarChar(300)
  img2       String     @db.VarChar(300)
  img3       String     @db.VarChar(300)
  img4       String     @db.VarChar(300)
  keywords   String     @db.VarChar(300)
  long_des   String     @db.LongText
  type       String     @db.VarChar(100)
  catId      Int
  createdAt  DateTime   @default(now()) @db.Timestamp(0)
  updatedAt  DateTime   @default(now()) @updatedAt @db.Timestamp(0)
  comments   comments[]
  categories categories @relation(fields: [catId], references: [id])

  @@index([catId], map: "news_list_catId_fkey")
}
